---
const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50">
    <!-- Navigation -->
    <nav class="bg-white shadow-sm">
      <div class="container mx-auto px-4">
        <div class="flex justify-between items-center py-4">
          <a href="/" class="text-2xl font-bold text-primary-700">SwankyBoyz</a>
          <div class="flex gap-6">
            <a href="/" class="text-gray-700 hover:text-primary-600 transition">Home</a>
            <a href="/blog" class="text-gray-700 hover:text-primary-600 transition">Blog</a>
            <a href="/about" class="text-gray-700 hover:text-primary-600 transition">About</a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main>
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white py-12">
      <div class="container mx-auto px-4">
        <div class="grid md:grid-cols-3 gap-8">
          <div>
            <h3 class="text-xl font-bold mb-4">SwankyBoyz</h3>
            <p class="text-gray-400">Your guide to modern men's style and lifestyle</p>
          </div>
          <div>
            <h4 class="font-bold mb-4">Quick Links</h4>
            <ul class="space-y-2 text-gray-400">
              <li><a href="/" class="hover:text-white transition">Home</a></li>
              <li><a href="/blog" class="hover:text-white transition">Blog</a></li>
              <li><a href="/about" class="hover:text-white transition">About</a></li>
            </ul>
          </div>
          <div>
            <h4 class="font-bold mb-4">Categories</h4>
            <ul class="space-y-2 text-gray-400">
              <li><a href="/blog?category=fashion" class="hover:text-white transition">Fashion</a></li>
              <li><a href="/blog?category=grooming" class="hover:text-white transition">Grooming</a></li>
              <li><a href="/blog?category=fitness" class="hover:text-white transition">Fitness</a></li>
            </ul>
          </div>
        </div>
        <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-400">
          <p>&copy; 2026 SwankyBoyz. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </body>
</html>
